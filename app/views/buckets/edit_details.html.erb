<%= simple_form_for @bucket , :url => update_bucket_details_path(@bucket.id) do |f| %>
  <%= f.input :id, :as => :hidden, :input_html => { :value => @bucket.id } %>
  <%= f.input :name %>
  <%= f.input :description, :hint => "Please describe in detail" %>
  <%= f.association :category, label_method: :category , :include_blank => false %>
  <%= f.button :submit %>
<% end %>