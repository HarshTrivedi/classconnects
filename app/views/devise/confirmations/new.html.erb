<div class="page-header" style="background:transparent; color:#ffffff ;border:none ;text-align:center" >
  <h1>Resend Confirmation</h1>
</div>
<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>

  <div class="form-inputs" style="color:#ffffff">
    <div class="col-md-offset-4 col-md-10">  
    <div class="col-md-4" style:"">
      <%= f.input :email, required: true, autofocus: true %>
    </div>
  </div>	<!-- changed-->
  
  </div>
  <br>  <br>  <br>  <br>
<div class=" col-md-offset-5 col-md-14" >
  <div class="form-actions">
    <%= f.button :submit, "Resend confirmation" , class: "btn btn-primary"%>
  </div>
</div>
  <br>  <br>
<div class="form-group" style="color:#ffffff">
    <div class="col-md-offset-5 col-lg-16">
      <%= render "devise/shared/links" %>
    </div>
</div>
<% end %>
