<div class="page-header" style="background:transparent; color:#ffffff ;border:none ;text-align:center" >
  <h1>Forgot Password?</h1>
</div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post ,class:"form-horizontal form-user"}) do |f| %>
  <%= f.error_notification %>


<div class="form-inputs" style="color:#ffffff">
  <div class="col-md-offset-4 col-md-10">  
    <div class="col-md-4" style:"">
      <%= f.input :email, required: true, autofocus: true %>
    </div>
  </div>	<!-- changed-->
  <br><br><br><br><br>
  <div class=" col-md-offset-4 col-md-10">
    
  <div class="form-actions" >
    <%= f.button :submit, "Reset Password" , class: "btn btn-primary"%>
  </div>
 </div>
 <br><br><br>
   <div class="form-group" style="color:#ffffff">
    <div class="col-md-offset-4 col-md-10">
      <%= render "devise/shared/links" %>
    </div>
</div>
<% end %>

