<%= simple_form_for @college_branch_pair , :url => create_college_branch_enrollment_path , :method => "post" do |f| %>
  <%= f.input :user_id, :as => :hidden, :input_html => { :value => @user.id } %>
  <%= f.association :college, label_method: :name , :include_blank => false %>
  <%= f.association :branch, label_method: :name , :include_blank => false %>
  <%= f.button :submit %>
<% end %>
