<div class="col-sm-4">
	<div class="the-box no-border">
		<div class="media user-card-sm">
		<div class="media-body">
			<h4 class="media-heading">
				<%= link_to( course.name , course_content_path(course.id)  ) %>
			</h4>					
			<span class="course-coding"><%= course.code %></span>
			<br>
			<span class="small text-muted">
					<b>College:</b>
					<% college = course.college_branch_pair.college %>
					<%= link_to(  truncate( college.name , :length => 15) , college_content_path(college.id) )  %>
			</span>
    	</div>
		<div class="right-button">
			  <%if (course.college == current_user.college ) and ( course.branch == current_user.branch) %>
				  <%if not course.enrolled_users.include?(current_user) %>
				  	<%= link_to(  fa_icon("plus", text: "Enroll") , enroll_course_path(course.id) , :method => :post  , :remote => true , :class => "btn btn-xs btn-warning btn-perspective") %>
				  <%else%>
				  	<%= link_to(  fa_icon("plus", text: "Un-Enroll")  , unenroll_course_path(course.id) , :method => :post , :remote => true, :class => "btn btn-xs btn-warning btn-perspective") %>	  	
				  <%end%>
			  <%end%>


			  <p></p>

 			  <%if not course.favorited_users.include?(current_user) %>
			  	<%= link_to(  fa_icon("heart", text: "Favorite") , favorite_course_path(course.id) , :method => :post  , :remote => true , :class => "btn btn-xs btn-warning btn-perspective") %>
		      <%else%>
			  	<%= link_to(   fa_icon("heart", text: "Un-Favorite")  , unfavorite_course_path(course.id) , :method => :post  , :remote => true , :class => "btn btn-xs btn-warning btn-perspective") %>	  
		      <%end%>

			</div>	
		</div>
	</div>
</div>



