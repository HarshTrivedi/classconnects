
<%= form_tag redirect_to_college_path , :id => "main_college_search" , :method => :get do %>
	<%= text_field_tag :search_college_field , nil , :id => "main_college_search_autocomplete" , :class => "form-control" , :placeholder => "Visit a College"  %>
<% end %>

<script>
	$("#main_college_search").keypress(function(event) {
	    if (event.which == 13) {
	        event.preventDefault();	        
			$('#main_college_search')[0].submit();
	    }

	});
</script>