<a href="#fakelink" class="dropdown-toggle" data-toggle="dropdown">Options <b class="caret"></b></a>
 <ul class="dropdown-menu square margin-list-rounded with-triangle">
              <%if current_user.has_upvoted?(bucket)  %>
                  <li>
                      <%= link_to( fa_icon("thumbs-up" , :text => "Like") , like_bucket_path(bucket.id) , :method => :post , :remote => true)%> 
                  </li>
              <%else%>
                  <li>
                      <%= link_to( fa_icon("thumbs-o-up" , :text => "Like") , like_bucket_path(bucket.id) , :method => :post , :remote => true)%> 
                  </li>
              <%end%>
              <%if current_user.has_downvoted?(bucket)  %>
                  <li>
                      <%= link_to( fa_icon("thumbs-down" , :text => "DisLike") , dislike_bucket_path(bucket.id) , :method => :post , :remote => true)%> 
                  </li>
              <%else%>
                  <li>
                      <%= link_to( fa_icon("thumbs-o-down" , :text => "DisLike") , dislike_bucket_path(bucket.id) , :method => :post , :remote => true)%> 
                  </li>
              <%end%>
            <li>
				<%= link_to( fa_icon("cloud-download", text: "Download") , request_download_bucket_path(bucket.id) , :method => :post , :remote => true)%> 
			</li>
			<li class="divider"></li>
			<li>
                <a data-toggle="modal" data-target="#modal_report_bucket_<%=bucket.id%>">
                   <i class="fa fa-ban"> Report</i>
                </a>
			</li>
 </ul>