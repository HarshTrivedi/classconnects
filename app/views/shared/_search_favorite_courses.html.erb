<%= form_tag favorite_courses_remote_path , :id => "favorite_courses_search" , :remote => true , :method => :post do %>
    <%= text_field_tag :search, params[:search] %>
<% end %>

<script>
  $("#favorite_courses_search input").keyup(function(){ 
	    $.get($("#favorite_courses_search").attr("action"), $("#favorite_courses_search").serialize(), null, "script");
	    return false;
  });
</script>