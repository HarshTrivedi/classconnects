
<div class="col-sm-6">
	<div class="the-box no-border">
		<div class="media user-card-sm">

		  <a class="pull-left" href="<%=profile_main_path(:user_id => user.id)%>">
	      		<%= image_tag avatar_url(user) , :class => "media-object img-circle" , :title => user.full_name%>
	      </a>
		  <div class="media-body">
		  	
			<span class="user-heading">
				<%= link_to( truncate(user.full_name, length: 40) , profile_main_path(:user_id => user.id)  ) %>

			</span>
			<br>
			<span class="user-mail">
				<%= truncate(user.email, length: 40)%>
			</span>
			<br>
			<span class="small-user text-muted">
					<b>Reputation:</b>
					<%= user.reputation  %>
			</span>
		  </div>
		  <div class="right-button">
			<span class="small-user text-muted">
				<%= fa_icon("cloud-upload", text: number_to_human_size(user.uploaded_data_size)  )  %>
			<p></p>
				<%= fa_icon("cloud-download", text: number_to_human_size(user.downloaded_data_size  )  )  %>
		  	</span>
		  </div>
		</div>
	</div>
</div>


 






