<div class="panel with-nav-tabs panel-success panel-square panel-no-border">
<div class="panel-heading">     
		<div class="right-content">
			<div class="btn-group">
			</div>
		</div><!-- /.right-content -->
		<ul class="nav nav-tabs">

			<%if current_page?(bucket_content_path) %>
				<%= content_tag(:li , link_to(fa_icon("cloud-download", text: "Content"), bucket_content_path(bucket.id) , :data => {:toggle=>""}), :class=>"active" )%>
			<%else%>
				<%= content_tag(:li , link_to(fa_icon("cloud-download", text: "Content"), bucket_content_path(bucket.id) , :data => {:toggle=>""} ), :class=>"" )%>
			<%end%>


			<%if current_page?(bucket_details_path)%>
				<%= content_tag(:li , link_to(fa_icon("cloud-download", text: "Details"), bucket_details_path(bucket.id) , :data => {:toggle=>""}), :class=>"active" )%>
			<%else%>
				<%= content_tag(:li , link_to(fa_icon("cloud-download", text: "Details"), bucket_details_path(bucket.id) , :data => {:toggle=>""}), :class=>"" )%>
			<%end%>


			<%if current_page?(edit_bucket_details_path)%>
				<%= content_tag(:li , link_to(fa_icon("cloud-download", text: "Edit Details"), edit_bucket_details_path(bucket.id) , :data => {:toggle=>""}), :class=>"active" )%>
			<%else%>
				<%= content_tag(:li , link_to(fa_icon("cloud-download", text: "Edit Details"), edit_bucket_details_path(bucket.id) , :data => {:toggle=>""}), :class=>"" )%>
			<%end%>


			<li class="dropdown">
				  <a href="#fakelink" class="dropdown-toggle" data-toggle="dropdown">Options <b class="caret"></b></a>
				  <ul class="dropdown-menu square margin-list-rounded with-triangle">
					<li>
						<%= link_to( "UpVote" , like_bucket_path(bucket.id) , :method => :put)%> 
					</li>
					<li>
						<%= link_to( "DownVote" , dislike_bucket_path(bucket.id) , :method => :put)%> 
					</li>
					<li>
						<%= link_to( "Download" , request_download_bucket(bucket.id) , :method => :post )%> 
					</li>
					<!--<li class="divider"></li>-->
					<li>
						<%= link_to( "Report" , "#modal_should_open" )%> 
					</li>
					<li>
						<%= link_to( "Edit Bucket" , "#modal_should_open" )%> 
					</li>
					
				  </ul>
			</li>


			<div id="internal_search_bar">
				<%if current_page?(bucket_content_path) %>
					<%= render(:partial => 'shared/search_bucket_content' , :locals => {:bucket => bucket } ) %> 
				<%end%>
			</div>
			 

		</ul>
</div>
</div>



