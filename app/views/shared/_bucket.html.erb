<div class="the-box no-border property-list">
    <div class="media">
        <a class="pull-left" href="#fakelink"> <!--if want to give user profile link-->
        
        <%= image_tag avatar_url(bucket.uploader) , :class => "media-object img-circle" , :title => bucket.uploader.full_name%>

        <div class="clearfix visible-xs"></div>
        <div class="media-body">
            <a href="#fakelink"></a>
            <h4 class="media-heading">
                <%= link_to( bucket.name , bucket_content_path(bucket.id)  ) %>
                <% category = bucket.category.category %>
                <small class="pull-right">
                	<b>Catagory: </b><span class="label label-warning span-sidebar">
                    <%= category %></span>
		        </small>                 
            </h4>

            <ul class="list-inline">
                <li><a href="#Up">
                    <i class="fa fa-thumbs-o-up"></i>
                </a> 
                </li>  |  
                <li><a href="#Down">
                        <i class="fa fa-thumbs-o-down"></i>
                    </a>6
                </li>
            </ul>
             <ul class = "list-inline">
		        <li>
        	     	<%= link_to("Download" , download_bucket_path(bucket.id) , :method => :post , :class => "label label-warning span-sidebar") %>
                </li>   |   
                <li>
                	<%= link_to("Delete" , download_bucket_path(bucket.id) , :method => :delete , :class => "label label-danger span-sidebar") %>
                </li>
            </ul>
	         <p class="hidden-xs"><!--ask-->
                <b>Description:</b><%= bucket.description %>
            </p>

            <span class="small text-muted">
            	<% course = bucket.course %>
				<b>Course:  </b><%= link_to(  course.name , course_content_path(course.id)  ) %>
			</span>

        </div>
	 </div>
</div>
