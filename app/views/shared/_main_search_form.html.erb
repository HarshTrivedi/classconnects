<div class="the-box transparent full search-page">
	<div style="position: relative; z-index: 0; background: none repeat scroll 0% 0% transparent;" class="the-box no-margin no-border bg-success">
		<div class="setting_one"></div>
		<div class="row">
			<div class="text-center">
				<%= form_tag(landing_path, method: "get", :class => "form-group has-feedback lg no-label") do %>
					<%= hidden_field_tag("college_autocomplete_id", "", :id => "college_autocomplete_id") %>
					<%= hidden_field_tag("branch_autocomplete_id" , "", :id => "branch_autocomplete_id") %>
					<%= hidden_field_tag("course_autocomplete_id" , "", :id => "course_autocomplete_id") %>
					<div class="col-sm-4">
						<%= text_field_tag :search , nil , :id => "main_search" , :class => "form-control" , :placeholder => "Search keyword"  %>
					</div>				
					<div class="col-sm-2">
						<%= text_field_tag :search_college , nil , :id => "college_autocomplete" , :class => "form-control" , :placeholder => "Search College"  %>
					</div>
					<div class="col-sm-2">
						<%= text_field_tag :search_branch  , nil , :id => "branch_autocomplete" , :class => "form-control"   , :placeholder => "Search Branch"  %>
					</div>
					<div class="col-sm-2">
						<%= text_field_tag :search_course  , nil , :id => "course_autocomplete" , :class => "form-control"   , :placeholder => "Search Course"%>
					</div>
					<div class="col-sm-2">
						<%= submit_tag "Find", :class => "btn btn-success form-control" %>
					</div>
				<%end%>
			</div>
		</div>
		<div style="left: 0px; top: 0px; overflow: hidden; margin: 0px; padding: 0px; height: 278px; width:100%; z-index: -999998; position: absolute;" class="backstretch">
			<img src="/assets/books2.jpg" style="position: absolute; margin: 0px; padding: 0px; border: medium none; width: 100%; height: 698px; max-height: none; max-width: none; z-index: -999999; left: 0px; top: -210px;" >
		</div>
	</div>			
</div>

