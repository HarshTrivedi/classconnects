
<div class="media no-border">
	<h4 class="small-heading more-margin-bottom"><%= comments.size%> COMMENTS</h4>
	<ul class="media-list media-sm media-dotted">
		<%for comment in comments%>
			<%= render(:partial => 'shared/comment', :locals => {:comment => comment } )%>
		<%end%>
	</ul>
</div>

<%= paginate comments %>
