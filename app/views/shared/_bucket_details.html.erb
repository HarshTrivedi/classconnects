<!-- bucket -->
<div class="the-box">
<div class="media-body">
<p></p>
<h2 class="media-heading">
<%= link_to( bucket.name , bucket_content_path(bucket.id) ) %>
</h2>
<hr class="marginbot-10">
<p></p>
<% uploader = bucket.uploader %>	

	<form class="form-horizontal" role="form">
				<div class="form-group">
					<label class="col-sm-2 control-label">Author</label>
					<div class="col-sm-10">
					  <p class="form-control-static"><%= link_to( uploader.full_name , profile_main_path( :user_id => uploader.id) ) %></p>
					</div>
				</div><!-- /.form-group -->
				<div class="form-group">
					<label class="col-sm-2 control-label">Author Reputation</label>
					<div class="col-sm-10">
					  <p class="form-control-static"><%= uploader.reputation%></p>
					</div>
				</div><!-- /.form-group -->
				<div class="form-group">
					<label class="col-sm-2 control-label">Full Description</label>
					<div class="col-sm-10">
					  <p class="form-control-static"><%= bucket.description %></p>
					</div>
				</div><!-- /.form-group -->
				<div class="form-group">
					<label class="col-sm-2 control-label">Total Downloads</label>
					<div class="col-sm-10">
					  <p class="form-control-static"><%= bucket.downloads.size%></p>
					</div>
				</div><!-- /.form-group -->
				
				<div class="form-group">
					<label class="col-sm-2 control-label">Total Up-votes</label>
					<div class="col-sm-10">
					  <p class="form-control-static"><%= bucket.up_votes %></p>
					</div>
				</div><!-- /.form-group -->
				<div class="form-group">
					<label class="col-sm-2 control-label">Bucket Size</label>
					<div class="col-sm-10">
					  <p class="form-control-static"><%= bucket.size %></p>
					</div>
				</div><!-- /.form-group -->
				<div class="form-group">
					<label class="col-sm-2 control-label">Catagory</label>
					<div class="col-sm-10">
					  <p class="form-control-static"><%= bucket.category %></p>
					</div>
				</div><!-- /.form-group -->
				<div class="form-group">
					<label class="col-sm-2 control-label">College</label>
					<div class="col-sm-10">
					  <p class="form-control-static"><%= bucket.course.college.name %></p>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">Branch</label>
					<div class="col-sm-10">
					  <p class="form-control-static"><%= bucket.course.branch.name %></p>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">Course</label>
					<div class="col-sm-10">
					  <p class="form-control-static"><%= bucket.course.name %></p>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">Accessibility</label>
					<div class="col-sm-10">
					  <p class="form-control-static"><%= ( bucket.privately_shared == "true" ) ? ("private") : ("public") %></p>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">Accessibility</label>
					<div class="col-sm-10">
					  <p class="form-control-static"><%= ( bucket.privately_shared == "true" ) ? ("private") : ("public") %></p>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">Created</label>
					<div class="col-sm-10">
					  <p class="form-control-static"><%= time_ago_in_words( bucket.created_at ) %> ago</p>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">Last Updated</label>
					<div class="col-sm-10">
					  <p class="form-control-static"><%= time_ago_in_words( bucket.updated_at ) %> ago</p>
					</div>
				</div>
			</form>
</div>
</div>
